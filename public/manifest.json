{
    "manifest_version": 3,
    "name": "Research Helper",
    "version": "1.0",
    "description": "Translation, summarization, and Q&A tool for research",
    "permissions": [
      "activeTab",
      "scripting",
      "tabs"
    ],
    "host_permissions": [
      "https://translate.googleapis.com/*",
      "https://summarize.googleapis.com/*",
      "https://prompt.googleapis.com/*",
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "index.html"
    }
}
  